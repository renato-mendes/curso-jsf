<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<application>
		<resource-bundle>
			<base-name>br.ufpe.nti.properties.mensagens</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
	<!-- Tela de cadastro -->
	<navigation-rule>
		<from-view-id>/cadastrar.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuarioBean.cadastrar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/tela-sucesso.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>erro</from-outcome>
			<to-view-id>/tela-erro.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Tela de login -->
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>loginPage</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<lifecycle>
		<phase-listener>br.ufpe.nti.ui.jsf.AuthPhaseListener</phase-listener>
	</lifecycle>

</faces-config>
