<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<!-- :: Message Bundles :: --> 
	<application>
		<message-bundle>br.ufpe.nti.properties.system</message-bundle>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>fr</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>br.ufpe.nti.properties.mensagens</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
	<!-- :: Fim: Message Bundles :: -->
	
	<!-- :: Phase Listerners :: -->
	<lifecycle>
		<phase-listener>
		br.ufpe.nti.ui.jsf.phaseListener.AuthPhaseListener
		</phase-listener>
	</lifecycle>
	<!-- :: Fim: Phase Listerners :: -->
	
	<!-- :: Navigation Rules :: -->
	<!-- Tela de cadastro de usuÃ¡rio-->
	<navigation-rule>
		<from-view-id>/pages/usuario/cadastrar.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{usuarioBean.cadastrar}</from-action>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/pages/tela-sucesso.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>erro</from-outcome>
			<to-view-id>/pages/tela-erro.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Tela de login -->
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>loginPage</from-outcome>
			<to-view-id>/pages/login.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<!-- Tela principal -->
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/pages/home.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<!-- :: Fim: Navigation Rules :: -->
</faces-config>
